---
layout: base
pagination:
    data: bible.books
    size: 1
    alias: book
permalink: "{{ book.title | slug }}/"
eleventyComputed:
    title: "Armory | {{ chapter.book }}"
---

<main>
    <header>
        <h1>{{ book.title }}</h1>
    </header>
    <article>
        {{ book.introduction | safe }}

        <ul>
        {% for chapter in range(1, book.chapters) %}
            <li><a href="/{{book.title | slug}}/{{chapter}}/">Chapter {{chapter}}</a></li>
        {% endfor %}
        </ul>
    </article>
</main>