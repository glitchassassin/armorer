<!-- Alpine.js: nested within searchContext -->

<div id="search-results" class="overflow-auto container d-none">
    <div data-reference-results></div>
    <div class="my-3">
        <h3 class="text-center">Search Results</h3>
        <p class="text-muted" data-search-pending="true">
            <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
              &nbsp;Searching...
        </p>
        <div data-search-pending="false">
            <p class="text-muted d-none" data-no-search-results>
                No results found
            </p>
            {% include "search/pagination.njk" %}
            <template id="search-result">
                <li class="list-group-item list-group-item-action">
                    <a class="stretched-link"></a>
                    <p class="text-muted"></p>
                </li>
            </template>
            <ul class="list-group mb-3" data-search-results></ul>
            {% include "search/pagination.njk" %}
        </div>
    </div>
</div>
</div>